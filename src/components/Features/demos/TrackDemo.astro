<div class="track-demo">
  <div class="app-window">
    <div class="window-header">
      <span class="window-title">Application Progress</span>
    </div>
    <div class="window-content">
      <div class="timeline">
        <div class="timeline-item active">
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <div class="timeline-header">
              <span class="date">2024-01-15</span>
              <span class="status">Applied</span>
            </div>
            <p>Senior Frontend Developer at Tech Company Inc.</p>
          </div>
        </div>
        <div class="timeline-item active">
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <div class="timeline-header">
              <span class="date">2024-01-18</span>
              <span class="status">Resume Screening</span>
            </div>
            <p>HR has reviewed your resume</p>
          </div>
        </div>
        <div class="timeline-item current">
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <div class="timeline-header">
              <span class="date">2024-01-20</span>
              <span class="status">Interview</span>
            </div>
            <p>Technical Interview - Remote Video Call</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .track-demo {
    width: 100%;
    height: 100%;
  }

  .app-window {
    background: rgb(var(--card-bg));
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(var(--text), 0.1);
    height: 100%;
  }

  .window-header {
    background: rgba(var(--primary), 0.1);
    padding: 1rem;
    border-bottom: 1px solid rgba(var(--text), 0.1);
  }

  .window-title {
    font-weight: 500;
  }

  .window-content {
    padding: 1.5rem;
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 7px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: rgba(var(--text), 0.1);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .timeline-dot {
    position: absolute;
    left: -2rem;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: rgb(var(--background));
    border: 2px solid rgba(var(--text), 0.2);
  }

  .timeline-item.active .timeline-dot {
    background: rgb(var(--accent));
    border-color: rgb(var(--accent));
  }

  .timeline-item.current .timeline-dot {
    background: rgb(var(--primary));
    border-color: rgb(var(--primary));
    box-shadow: 0 0 0 4px rgba(var(--primary), 0.2);
  }

  .timeline-content {
    background: rgb(var(--background));
    border-radius: 8px;
    padding: 1rem;
    border: 1px solid rgba(var(--text), 0.1);
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .date {
    font-size: 0.875rem;
    color: rgba(var(--text), 0.7);
  }

  .status {
    font-size: 0.875rem;
    font-weight: 500;
    color: rgb(var(--primary));
  }

  .timeline-content p {
    margin: 0;
    color: rgba(var(--text), 0.8);
  }
</style>