---
const platforms = [
  { name: 'LinkedIn', url: 'linkedin.com/jobs' },
  { name: 'Indeed', url: 'indeed.com' },
  { name: 'Glassdoor', url: 'glassdoor.com/jobs' },
  { name: '51job', url: '51job.com' },
  { name: 'BOSS直聘', url: 'zhipin.com' },
  { name: '猎聘网', url: 'liepin.com' }
];
---

<div class="platform-suggestions">
  <span class="suggestion-text">试试这些平台</span>
  <div class="suggestion-container">
    {platforms.map(platform => (
      <div class="platform-url">
        <span class="platform-name">{platform.name}</span>
        <span class="platform-link">{platform.url}</span>
      </div>
    ))}
  </div>
</div>

<style>
  .platform-suggestions {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -180%);
    background: rgba(var(--card-bg), 0.9);
    backdrop-filter: blur(8px);
    padding: 0.75rem;
    border-radius: 12px;
    border: 1px solid rgba(var(--text), 0.1);
    opacity: 0;
    transition: all 0.3s ease;
    pointer-events: none;
  }

  .platform-suggestions.show {
    opacity: 1;
    transform: translate(-50%, -200%);
  }

  .suggestion-text {
    display: block;
    text-align: center;
    font-size: 0.875rem;
    color: rgba(var(--text), 0.6);
    margin-bottom: 0.5rem;
  }

  .suggestion-container {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .platform-url {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.5rem;
    border-radius: 6px;
    transition: all 0.2s ease;
    opacity: 0;
    transform: translateY(10px);
  }

  .platform-url.active {
    opacity: 1;
    transform: translateY(0);
    background: rgba(var(--primary), 0.05);
  }

  .platform-name {
    font-weight: 500;
    color: rgb(var(--text));
  }

  .platform-link {
    color: rgb(var(--primary));
    font-size: 0.875rem;
  }
</style>

<script>
  function setupPlatformSuggestions() {
    const containers = document.querySelectorAll('.platform-suggestions');
    
    containers.forEach(container => {
      const platforms = container.querySelectorAll('.platform-url');
      let currentIndex = 0;

      function showNextPlatform() {
        // Hide current platform
        platforms[currentIndex].classList.remove('active');
        
        // Move to next platform
        currentIndex = (currentIndex + 1) % platforms.length;
        
        // Show new platform
        platforms[currentIndex].classList.add('active');
      }

      // Show first platform
      platforms[0].classList.add('active');

      // Start rotation
      setInterval(showNextPlatform, 2000);
    });
  }

  // Initialize platform suggestions
  setupPlatformSuggestions();
</script>