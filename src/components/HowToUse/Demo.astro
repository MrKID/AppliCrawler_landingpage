<style>
  .demo-container {
    max-width: 800px;
    margin: 4rem auto;
    padding: 0 2rem;
  }

  .browser-window {
    background: rgb(var(--card-bg));
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    overflow: hidden;
  }

  .browser-header {
    background: rgb(var(--text));
    padding: 0.75rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .browser-actions {
    display: flex;
    gap: 0.5rem;
  }

  .browser-actions span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255,255,255,0.5);
  }

  .browser-address {
    flex: 1;
    background: rgba(255,255,255,0.1);
    border-radius: 8px;
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255,255,255,0.8);
    font-size: 0.9rem;
  }

  .browser-content {
    padding: 2rem;
    position: relative;
    min-height: 300px;
  }

  .job-card {
    background: rgb(var(--background));
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid rgba(var(--text), 0.1);
  }

  .job-card h3 {
    margin: 0 0 0.5rem;
    color: rgb(var(--text));
  }

  .job-card p {
    margin: 0 0 1rem;
    color: rgba(var(--text), 0.7);
  }

  .job-details {
    display: flex;
    gap: 1rem;
  }

  .job-details span {
    background: rgba(var(--primary), 0.1);
    color: rgb(var(--primary));
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.875rem;
  }

  .extension-popup {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgb(var(--card-bg));
    border-radius: 12px;
    padding: 1rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid rgba(var(--text), 0.1);
    animation: slideIn 0.5s ease-out;
  }

  .popup-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .save-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgb(var(--primary));
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .save-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--primary), 0.2);
  }

  @keyframes slideIn {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>