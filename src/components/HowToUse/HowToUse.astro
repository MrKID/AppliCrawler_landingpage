---
import SectionTitle from '../shared/SectionTitle.astro';
import Step from './Step.astro';

interface Props {
  t: any;
}

const { t } = Astro.props;

const steps = [
  {
    number: "01",
    title: t.howToUse.steps.download.title,
    description: t.howToUse.steps.download.description
  },
  {
    number: "02",
    title: t.howToUse.steps.save.title,
    description: t.howToUse.steps.save.description
  },
  {
    number: "03",
    title: t.howToUse.steps.manage.title,
    description: t.howToUse.steps.manage.description
  }
];
---

<section class="how-to-use">
  <div class="container">
    <SectionTitle text={t.howToUse.title} />
    <div class="steps">
      {steps.map(step => (
        <Step {...step} />
      ))}
    </div>
  </div>
</section>

<style>
  .how-to-use {
    padding: 8rem 0;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .how-to-use {
      padding: 6rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .steps {
      gap: 1.5rem;
    }
  }
</style>