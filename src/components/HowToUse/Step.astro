---
interface Props {
  number: string;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="step">
  <div class="step-number">{number}</div>
  <div class="step-content">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</div>

<style>
  .step {
    display: flex;
    gap: 2rem;
    padding: 2rem;
    background: rgba(var(--card-bg), 0.5);
    border-radius: 1rem;
    border: 1px solid rgba(var(--text), 0.1);
    transition: all 0.3s ease;
  }

  .step:hover {
    transform: translateY(-5px);
    border-color: rgba(var(--primary), 0.3);
    box-shadow: 0 8px 24px rgba(var(--primary), 0.1);
  }

  .step-number {
    flex-shrink: 0;
    font-size: 2rem;
    font-weight: 700;
    color: rgba(var(--primary), 0.3);
    font-feature-settings: "tnum";
  }

  .step-content {
    flex-grow: 1;
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: rgb(var(--text));
  }

  p {
    color: rgba(var(--text), 0.8);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .step {
      padding: 1.5rem;
      gap: 1.5rem;
    }

    .step-number {
      font-size: 1.5rem;
    }

    h3 {
      font-size: 1.25rem;
    }
  }
</style>