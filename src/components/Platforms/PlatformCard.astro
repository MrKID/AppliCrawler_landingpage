---
interface Props {
  name: string;
  icon: string;
  color: string;
  description: string;
  whiteBackground?: boolean;
}

const { name, icon, color, description, whiteBackground = false } = Astro.props;
---

<div class="platform-card">
  <div class={`icon-wrapper ${whiteBackground ? 'white-bg' : ''}`}>
    <img src={icon} alt={name} loading="lazy" />
  </div>
  <div class="platform-info">
    <h3>{name}</h3>
    <p>{description}</p>
  </div>
</div>

<style>
  .platform-card {
    background: rgb(var(--card-bg));
    border-radius: 32px;
    padding: 4rem;
    border: 1px solid rgba(var(--text), 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    height: 100%;
  }

  .icon-wrapper {
    width: 200px;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 40px;
    background: rgba(var(--text), 0.05);
    margin-bottom: 2.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .icon-wrapper.white-bg {
    background: white;
  }

  .icon-wrapper img {
    width: 140px;
    height: 140px;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .platform-info h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: rgb(var(--text));
  }

  .platform-info p {
    color: rgba(var(--text), 0.8);
    line-height: 1.6;
    font-size: 1.25rem;
  }

  .platform-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(var(--primary), 0.1);
    border-color: rgba(var(--primary), 0.3);
  }

  .platform-card:hover .icon-wrapper:not(.white-bg) {
    background: rgba(var(--primary), 0.1);
  }

  .platform-card:hover img {
    transform: scale(1.1);
  }

  @media (max-width: 1200px) {
    .platform-card {
      padding: 3rem;
    }

    .icon-wrapper {
      width: 160px;
      height: 160px;
      border-radius: 32px;
    }

    .icon-wrapper img {
      width: 120px;
      height: 120px;
    }
  }

  @media (max-width: 768px) {
    .platform-card {
      padding: 2rem;
    }

    .icon-wrapper {
      width: 120px;
      height: 120px;
      border-radius: 24px;
      margin-bottom: 2rem;
    }

    .icon-wrapper img {
      width: 80px;
      height: 80px;
    }

    .platform-info h3 {
      font-size: 1.5rem;
    }

    .platform-info p {
      font-size: 1rem;
    }
  }
</style>