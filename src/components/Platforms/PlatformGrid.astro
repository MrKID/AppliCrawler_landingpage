---
const platforms = [
  { 
    name: "LinkedIn",
    icon: "/linkedin.svg",
    color: "#0077B5",
    description: "全球最大的职业社交平台"
  },
  { 
    name: "Indeed",
    icon: "/indeed.svg",
    color: "#2164F3",
    description: "覆盖全球的求职搜索引擎"
  },
  { 
    name: "Glassdoor",
    icon: "/glassdoor.svg",
    color: "#0CAA41",
    description: "真实公司评价和薪资数据"
  },
  { 
    name: "51job",
    icon: "/51job.svg",
    color: "#FF6721",
    description: "国内领先的招聘平台"
  },
  { 
    name: "BOSS直聘",
    icon: "/boss.svg",
    color: "#00B38A",
    description: "直接对话 HR 和招聘经理",
    whiteBackground: true
  },
  { 
    name: "猎聘网",
    icon: "/liepin.svg",
    color: "#FF6721",
    description: "高端人才招聘平台",
    whiteBackground: true
  }
];
---

<div class="platform-grid">
  {platforms.map(platform => (
    <div class="platform-card">
      <div class={`icon-wrapper ${platform.whiteBackground ? 'white-bg' : ''}`}>
        <img src={platform.icon} alt={platform.name} loading="lazy" />
      </div>
      <div class="platform-info">
        <h3>{platform.name}</h3>
        <p>{platform.description}</p>
      </div>
    </div>
  ))}
</div>

<style>
  .platform-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .platform-card {
    background: rgb(var(--card-bg));
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid rgba(var(--text), 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .icon-wrapper {
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 24px;
    background: rgba(var(--text), 0.05);
    margin-bottom: 1.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .icon-wrapper.white-bg {
    background: white;
  }

  .icon-wrapper img {
    width: 80px;
    height: 80px;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .platform-info h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: rgb(var(--text));
  }

  .platform-info p {
    color: rgba(var(--text), 0.8);
    line-height: 1.6;
  }

  .platform-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(var(--primary), 0.1);
    border-color: rgba(var(--primary), 0.3);
  }

  .platform-card:hover .icon-wrapper:not(.white-bg) {
    background: rgba(var(--primary), 0.1);
  }

  .platform-card:hover img {
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .platform-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      padding: 0 1rem;
    }

    .icon-wrapper {
      width: 100px;
      height: 100px;
    }

    .icon-wrapper img {
      width: 64px;
      height: 64px;
    }
  }
</style>