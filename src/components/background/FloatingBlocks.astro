<div class="floating-blocks">
  <div class="block block-1"></div>
  <div class="block block-2"></div>
  <div class="block block-3"></div>
  <div class="block block-4"></div>
  <div class="gradient-overlay"></div>
</div>

<style>
  .floating-blocks {
    position: fixed;
    inset: 0;
    z-index: -1;
    overflow: hidden;
    pointer-events: none;
  }

  .block {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
    animation: float 20s infinite;
  }

  .block-1 {
    width: 40vw;
    height: 40vw;
    background: rgba(var(--primary), 0.15);
    top: -10%;
    right: -10%;
    animation-delay: -2s;
  }

  .block-2 {
    width: 35vw;
    height: 35vw;
    background: rgba(var(--secondary), 0.15);
    bottom: -15%;
    left: -10%;
    animation-delay: -5s;
  }

  .block-3 {
    width: 25vw;
    height: 25vw;
    background: rgba(var(--accent), 0.15);
    top: 40%;
    left: 20%;
    animation-delay: -8s;
  }

  .block-4 {
    width: 30vw;
    height: 30vw;
    background: rgba(var(--primary), 0.15);
    bottom: 20%;
    right: 15%;
    animation-delay: -12s;
  }

  .gradient-overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at center,
      transparent 0%,
      rgb(var(--background)) 70%
    );
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    25% {
      transform: translate(5%, 5%) rotate(5deg) scale(1.1);
    }
    50% {
      transform: translate(-5%, 10%) rotate(-5deg) scale(0.9);
    }
    75% {
      transform: translate(7%, -5%) rotate(3deg) scale(1.05);
    }
  }

  @media (max-width: 768px) {
    .block {
      filter: blur(60px);
    }
  }
</style>