---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<h2 class="section-title">{text}</h2>

<style>
  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 4rem;
    color: rgb(47, 112, 255);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
      margin-bottom: 3rem;
    }
  }
</style>