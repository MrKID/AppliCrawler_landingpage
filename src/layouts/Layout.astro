---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import FloatingBlocks from '../components/background/FloatingBlocks.astro';
import { translations } from '../i18n/translations';
import '../styles/typography.css';

interface Props {
  title: string;
  lang?: string;
}

const { title, lang = 'zh' } = Astro.props;
const t = translations[lang as keyof typeof translations];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={t.subtitle} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="noise"></div>
    <FloatingBlocks />
    <Navigation />
    <slot />
    <Footer t={t} lang={lang} />
  </body>
</html>

<style is:global>
  :root {
    --primary: 47, 112, 255;
    --secondary: 111, 76, 255;
    --accent: 0, 247, 255;
    --background: 250, 250, 255;
    --text: 23, 23, 23;
    --card-bg: 255, 255, 255;
    --gradient-1: linear-gradient(135deg, rgba(47, 112, 255, 0.2), rgba(111, 76, 255, 0.2));
    --gradient-2: linear-gradient(135deg, rgba(0, 247, 255, 0.2), rgba(47, 112, 255, 0.2));
  }

  html {
    background-color: rgb(var(--background));
    color: rgb(var(--text));
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    position: relative;
  }

  * {
    box-sizing: border-box;
  }
</style>